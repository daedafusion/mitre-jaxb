<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>mitre-jaxb</artifactId>
        <groupId>com.daedafusion.mitre</groupId>
        <version>1.0</version>
    </parent>

    <artifactId>maec-jaxb</artifactId>
    <version>4.1</version>

    <dependencies>
        <dependency>
            <groupId>com.daedafusion.mitre</groupId>
            <artifactId>cybox-jaxb</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <version>0.12.3</version>
                <executions>
                    <execution>
                        <id>generate</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <episode>true</episode>
                    <useDependenciesAsEpisodes>true</useDependenciesAsEpisodes>

                    <schemaDirectory>src/main/resources</schemaDirectory>
                    <schemaIncludes>
                        <include>maec_container_schema.xsd</include>
                    </schemaIncludes>

                    <catalog>src/main/xjb/catalog.xml</catalog>
                    <strict>false</strict>

                    <bindingDirectory>src/main/xjb</bindingDirectory>

                    <extension>true</extension>
                    <args>
                        <arg>-XtoString</arg>
                        <arg>-Xequals</arg>
                        <arg>-XhashCode</arg>
                    </args>
                    <plugins>
                        <plugin>
                            <groupId>org.jvnet.jaxb2_commons</groupId>
                            <artifactId>jaxb2-basics</artifactId>
                            <version>0.6.5</version>
                        </plugin>
                    </plugins>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.3</version>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <file>${project.basedir}/target/classes/META-INF/sun-jaxb.episode</file>
                    <replacements>
                        <replacement>
                            <!--<token>bindings scd="x-schema::tns"</token>-->
                            <token>bindings scd=</token>
                            <!--<value>bindings if-exists="true" scd="x-schema::tns"</value>-->
                            <value>bindings if-exists="true" scd=</value>
                        </replacement>
                    </replacements>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
